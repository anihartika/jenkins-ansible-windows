name: Install Ansible

on: [push]

jobs:
  install:
    runs-on: windows-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Set up Python
      uses: actions/setup-python@v2
      with:
        python-version: '3.x'

    - name: Install pip
      run: |
        python -m pip install --upgrade pip

    - name: Install Ansible
      run: |
        pip install ansible
